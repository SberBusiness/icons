{
    "compilerOptions": {
        "baseUrl": "./tools",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "lib": ["es5", "es6", "es2015.promise"],
        "declaration": true,
        "preserveConstEnums": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noEmitHelpers": false,
        "noEmitOnError": false
    },
    "include": [
        "./tools"
    ]
}
